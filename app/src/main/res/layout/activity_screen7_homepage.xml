            android:background="@drawable/login_rounded"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="6.5"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Top Mentors for you"
                android:textSize="17sp"
                android:textColor="#157177"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="140dp"
                android:text = "View All"
                android:textSize="14sp"
                android:textColor="#157177"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginStart="-350dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/topmentor1"
                android:background="@drawable/rectangle"
                android:backgroundTint="#C1DFF3">
            </ImageView>

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/topmentor1"
                android:background="@drawable/rectangle"
                android:backgroundTint="#C1DFF3">
            </ImageView>

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/topmentor1"
                android:background="@drawable/rectangle"
                android:backgroundTint="#C1DFF3">
            </ImageView>

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/topmentor1"
                android:background="@drawable/rectangle"
                android:backgroundTint="#C1DFF3">
            </ImageView>

        </LinearLayout>

        <!--    Start of Mentors portion of Screen 2-->
        <LinearLayout
            android:background="@drawable/login_rounded"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="6.5"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Education Mentors"
                android:textSize="17sp"
                android:textColor="#157177"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="150dp"
                android:text = "View All"
                android:textSize="14sp"
                android:textColor="#157177"
