<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen23_ShowBookedSessions"
    android:background="@color/backGround_home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="316dp"
        android:background="@drawable/circle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="254dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/homePageTextColor1"
                android:src="@drawable/ic_back"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp">
            </ImageView>
            <Button
                android:id="@+id/backButton_onBookedSessionsPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#00123456"
                android:src="@drawable/ic_back"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="55dp">
            </Button>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Booked Sessions"
                android:textColor="@color/searchPageTextColor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="58dp"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium">
            </TextView>
            <!--closing for top row, just name of page-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="100dp"
                android:layout_width="120dp"
                android:src="@drawable/booked_session_mentor"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_height="55dp"
                android:layout_width="230dp"
                android:src="@drawable/booked_session_mentor_description"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_height="100dp"
                android:layout_width="120dp"
                android:src="@drawable/booked_session_mentor"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_height="55dp"
                android:layout_width="230dp"
                android:src="@drawable/booked_session_mentor_description"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>