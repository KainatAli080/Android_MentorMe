<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen21_Profile"
    android:background="@color/backGround_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/homePageTextColor1"
                    android:src="@drawable/ic_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp">
                </ImageView>
                <Button
                    android:id="@+id/backButton_onProfilePage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#00123456"
                    android:src="@drawable/ic_back"
                    android:layout_marginStart="-40dp"
                    android:layout_marginTop="35dp">
                </Button>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="My Profile"
                    android:textColor="@color/searchPageTextColor"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="35dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium">
                </TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="..."
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="25dp"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium">
                </TextView>
                <!--closing for top row, just name of page-->
            </LinearLayout>
            <!--opening for profile backgroung row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@drawable/rectangle"
                        android:layout_marginStart="5dp">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@color/homePageTextColor1">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@drawable/rectangle">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@color/homePageTextColor1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@color/homePageTextColor1"
                        android:layout_marginStart="5dp">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@drawable/rectangle">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@color/homePageTextColor1">
                    </TextView>
                    <TextView
                        android:layout_height="50dp"
                        android:layout_width="100dp"
                        android:background="@drawable/rectangle">
                    </TextView>
                </LinearLayout>

                <!--opening for profile backgroung row-->
            </LinearLayout>

            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:src="@drawable/circle_black_bgd"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-40dp"/>
            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/ic_profile_image"
                android:layout_marginStart="45dp"
                android:layout_marginTop="-65dp"/>

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/circle_camerastuff"
                android:layout_marginStart="95dp"
                android:layout_marginTop="-20dp"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_edit_pen"
                android:layout_marginStart="98dp"
                android:layout_marginTop="-25dp"/>
            <Button
                android:id="@+id/editProfileBtn_onProfilePage"
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="98dp"
                android:layout_marginTop="-20dp">
            </Button>

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/circle_camerastuff"
                android:layout_marginStart="335dp"
                android:layout_marginTop="-40dp"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_edit_pen"
                android:layout_marginStart="337dp"
                android:layout_marginTop="-25dp"/>
            <!--   closing for first layer, weight = 6 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Kainat Ali"
                android:textColor="@color/searchPageTextColor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:fontFamily="sans-serif-medium">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Islamabad"
                android:textColor="@color/cameraBackgroundColor"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium">
            </TextView>
            <Button
                android:id="@+id/bookedSessionsPagebtn_onProfilePage"
                android:layout_height="60dp"
                android:layout_width="190dp"
                android:text="Booked Sessions"
                android:textAlignment="center"
                android:textColor="@color/searchPageTextColor"
                android:layout_marginStart="110dp"
                android:layout_marginTop="20dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/mentorPageButtonColor"/>
            <!--    closing layer till button to booked sessions page -->
        </LinearLayout>

        <!-- opening for favourite mentors portion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Favourite Mentors"
                android:textColor="@color/searchPageTextColor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/test"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/test"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/test"/>
            </LinearLayout>
            <!-- closing for favourite mentors portion-->
        </LinearLayout>

        <!-- opening for favourite reviews portion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="My Reviews"
                android:textColor="@color/searchPageTextColor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/review_onprofile"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/review_onprofile"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/review_onprofile"/>
            </LinearLayout>
            <!-- closing for favourite reviews portion-->
        </LinearLayout>

        <!--    Start of Bottom Navigation    -->
        <LinearLayout
            android:background="@color/bottomNavColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <!--For home button on botton navigation-->
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_home"
                android:backgroundTint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Home"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="25dp">
            </TextView>

            <Button
                android:id="@+id/Homebtn_onProfilePage_BottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-52dp">
            </Button>

            <!-- For Search Button -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Search"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="25dp">
            </TextView>

            <Button
                android:id="@+id/Searchbtn_onProfilePage_BottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-57dp">
            </Button>

            <!--   Plus button on bottom nav-->

            <ImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/ic_plus_circle"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:rotation="90"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">
            </ImageView>

            <ImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/ic_plus_circle"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="5dp">
            </ImageView>

            <Button
                android:id="@+id/Plusbtn_onProfilePage_onBottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-63dp"
                android:layout_marginTop="5dp">
            </Button>

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/ic_plus_sign"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:layout_marginStart="-63dp"
                android:layout_marginTop="10dp">
            </ImageView>

            <!-- For Chat Button -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_chat"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Chats"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="25dp">
            </TextView>


            <Button
                android:id="@+id/Chatbtn_onProfilePage_bottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-49dp">
            </Button>

            <!-- For Profile Button -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_profile"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Profile"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="25dp">
            </TextView>

            <Button
                android:id="@+id/ProfileBtn_onProfilePage_bottomNav"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#00155B7C">
            </Button>
            <!--closing for bottom nav-->
        </LinearLayout>

        <!--closing for most outer linear layout, for entire screen
         having weight 20 -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>