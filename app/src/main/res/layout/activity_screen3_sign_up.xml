<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E7EFFE">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="316dp"
        android:background="@drawable/circle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="30">

        <!--Top of Screen 2, name display-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="mentor"
                android:textColor="#2098B4"
                android:textSize="50sp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="100dp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="250dp"
                tools:text="mentor" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="me"
                android:textColor="#F9CF34"
                android:textSize="50sp"
                android:textStyle="bold|italic"
                android:layout_marginStart="2dp"
                android:layout_marginTop="100dp"
                tools:layout_editor_absoluteX="246dp"
                tools:layout_editor_absoluteY="277dp"
                tools:text="me" />

        </LinearLayout>

        <!--    Start of Login portion of Screen 2-->
        <LinearLayout
            android:background="@drawable/login_rounded"
            android:backgroundTint="#89CBF6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="17"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Get Started!"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="27dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:layout_marginLeft="-147dp"
                android:layout_marginTop="40dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/name_Input"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-47dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="100dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/Email_Input"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="-45dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Contact Number"
                android:textColor="@color/white"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="160dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/contactNum_Input"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="-125dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Country"
                android:textColor="@color/white"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="220dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/country_Input"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="-60dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="City"
                android:textColor="@color/white"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="278dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/city_Input"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="-30dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="340dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif">
            </TextView>

            <EditText
                android:id="@+id/password_Input"
                android:background="@drawable/loginpage_inputfield"
                android:backgroundTint="@color/white"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="-77dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="sans-serif"/>

        </LinearLayout>

        <!--    Start of Login button of Screen 2 (for buttons)-->
        <LinearLayout
            android:background="#89CBF6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SignUpFinished_btn"
                android:backgroundTint="@color/white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="28dp"
                android:text="Sign Up"
                android:textColor="#89CBF6"
                android:textSize="20dp" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="-18dp"
                android:layout_marginLeft="-300dp"
                android:backgroundTint="#66BBB2"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Password must be at least 8 characters long." />
        </LinearLayout>

        <!--    Start of Sign up button of Screen 2 (for buttons)-->
        <LinearLayout
            android:background="#89CBF6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Already have an account? "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginLeft="70dp">
            </TextView>

            <Button
                android:id="@+id/loginPage_btn"
                android:layout_width="103dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#89CBF6"
                android:textColor="#137D9A"
                android:textStyle="italic"
                android:textSize="16dp"
                android:text="Log In"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>