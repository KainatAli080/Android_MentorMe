<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen16_JohnsCommunity"
    android:background="@color/backGround_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:background="@drawable/mentorpage_rectangle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="45dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_back">
                </ImageView>

                <Button
                    android:id="@+id/backBtn_onJohnCoopersCommunity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="-45dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#00155B7C">
                </Button>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="John Cooper's"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_call_sign">
                </ImageView>

                <Button
                    android:id="@+id/callBtn_onJohnCoopersCommunity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="-30dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#00155B7C">
                </Button>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_video">
                </ImageView>

                <Button
                    android:id="@+id/videoCallBtn_onJohnCoopersCommunity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="-32dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#00155B7C">
                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-225dp"
                    android:layout_marginTop="115dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Community"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp">
                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="-70dp"
                    android:layout_marginTop="150dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/headshot_mentor">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <!--    The text Messages Exchanged   -->
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rectangle"
                    android:layout_marginStart="90dp"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:layout_height="45dp"
                    android:layout_width="280dp"
                    android:text="How was your experience with the mentorship? Satisfied??"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="-50dp"
                    android:layout_marginStart="80dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/headshot_mentor"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:src="@drawable/rectangle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Worth it!"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="-80dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/headshot_mentor"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:src="@drawable/rectangle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Impressive!"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="-100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/headshot_mentor"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:src="@drawable/rectangle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="You're missing out."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="-160dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:src="@drawable/rectangle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_gallery"
                    android:layout_marginTop="-100dp"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-37dp"
                    android:layout_marginStart="55dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:hint="Type something..."/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_camera"
                    android:layout_marginStart="270dp"
                    android:layout_marginTop="-35dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_mic"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="-30dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    android:layout_marginStart="340dp"
                    android:layout_marginTop="-30dp"/>

            </LinearLayout>

        </LinearLayout>

        <!--    Start of Bottom Navigation    -->
        <LinearLayout
            android:background="#155B7C"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <!--For home button on botton navigation-->
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_home"
                android:backgroundTint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Home"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="20dp">
            </TextView>

            <Button
                android:id="@+id/Homebtn_onJohnsCommunity_BottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-52dp">
            </Button>

            <!-- For Search Button -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Search"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="20dp">
            </TextView>

            <Button
                android:id="@+id/Searchbtn_onJohnsCommunity_BottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-57dp">
            </Button>

            <!--   Plus button on bottom nav-->

            <ImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/ic_plus_circle"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:rotation="90"
                android:layout_marginStart="10dp">
            </ImageView>

            <ImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/ic_plus_circle"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:layout_marginStart="-60dp">
            </ImageView>

            <Button
                android:id="@+id/Plusbtn_onJohnsCommunity_bottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-63dp">
            </Button>

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/ic_plus_sign"
                android:background="@drawable/rectangle"
                android:backgroundTint="#00C1DFF3"
                android:layout_marginStart="-63dp"
                android:layout_marginTop="5dp">
            </ImageView>

            <!-- For Chat Button -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_chat"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Chats"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="20dp">
            </TextView>


            <Button
                android:id="@+id/Chatbtn_onJohnsCommunity_bottomNav"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:backgroundTint="#00155B7C"
                android:layout_marginStart="-49dp">
            </Button>

            <!-- For Profile Button -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_profile"
                android:backgroundTint="@color/white"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Profile"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="20dp">
            </TextView>

            <Button
                android:id="@+id/Profilebtn_onJohnsCommunity_bottomNav"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="-55dp"
                android:backgroundTint="#00155B7C">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>