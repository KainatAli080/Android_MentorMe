<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen4_VerifyPhoneNum">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="734dp"
        android:orientation="vertical"
        android:weightSum="20"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#C7E9F8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_btn_toSignUp"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-17dp"
                    android:backgroundTint="#C7E9F8"
                    app:icon="@drawable/back_btn"
                    app:iconSize="60dp"
                    app:iconTint="#4BA6EC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Verify your phone number"
                    android:layout_marginLeft="30dp"
                    android:textColor="#0D67B5"
                    android:textSize="28dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="We've sent a code to "
                    android:textSize="16sp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/display_pnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#094E8A"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginLeft="225dp"
                    android:layout_marginTop="-23dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/num1"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:background="@drawable/input_code_circles"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp">

                </EditText>

                <EditText
                    android:id="@+id/num2"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/input_code_circles"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </EditText>

                <EditText
                    android:id="@+id/num3"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/input_code_circles"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </EditText>

                <EditText
                    android:id="@+id/num4"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/input_code_circles"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </EditText>

                <EditText
                    android:id="@+id/num5"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/input_code_circles"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:background="@drawable/verify_btn"
                    android:layout_width="145dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:backgroundTint="#0D67B5"/>

                <Button
                    android:id="@+id/verify_btn_verifyPage"
                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:text="Verify"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#0D67B5"
                    android:layout_marginLeft="-140dp"
                    android:layout_marginTop="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:background="#71CEF6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="1"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-67dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="2"
                    android:textSize="37sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="3"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!--Second row of numbers-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="4"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="5"
                    android:textSize="37sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="6"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!--3rd row of numbers-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="7"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="8"
                    android:textSize="40sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-68dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="9"
                    android:textSize="37sp"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <!--final row of numbers, only has 0 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/numbers_btn">

                </TextView>

                <Button
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-68dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#B9EFF6"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>