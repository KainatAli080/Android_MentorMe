<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen24_NotificationsPage"
    android:background="@color/backGround_home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="316dp"
        android:background="@drawable/circle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="214dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/homePageTextColor1"
                android:src="@drawable/ic_back"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp">
            </ImageView>
            <Button
                android:id="@+id/backButton_onNotificationPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#00123456"
                android:src="@drawable/ic_back"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="55dp">
            </Button>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Notifications"
                android:textColor="@color/searchPageTextColor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="58dp"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium">
            </TextView>

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/circle_camerastuff"
                android:layout_marginStart="20dp"
                android:layout_marginTop="65dp"/>
            <ImageView
                android:layout_height="18dp"
                android:layout_width="18dp"
                android:src="@drawable/ic_notification"
                android:layout_marginStart="-23dp"
                android:layout_marginTop="68dp"/>
            <!--closing for top row, just name of page-->
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Clear All"
                android:textColor="@color/mentorPageButtonColor"
                android:layout_marginEnd="20dp"
                android:textAlignment="textEnd"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="You have added a mentor, Alex. Thank you!"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="45"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="135"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Your favourites list is expanding. Impressive"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="45"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="135"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="You have a new message in community."
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="45"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="135"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Your favourite mentor is online. Say Hi?"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="45"
                android:layout_marginStart="53dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="135"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thank you for booking a session. Good luck!"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="45"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_cross"
                android:rotation="135"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>